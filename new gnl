#include "get_next_line.h"

char	*ft_strchr(const char *s, int c)
{
	while (*s)
	{
		if (*s == (char)c)
			return ((char *)s);
		s++;
	}
	if ((char)c == '\0')
		return ((char *)s);
	return (NULL);
}

char	*ft_rest_of_read(char *rest_of_read)
{
	int		i;
	char	*new_rest_of_read;

	i = 0;
	if (!rest_of_read)
		return (NULL);
	while (rest_of_read[i] && rest_of_read[i] != '\n')
		i++;
	if (rest_of_read[i] == '\n')
		i++;
	if (!rest_of_read[0])
	{
		free(rest_of_read);
		return (NULL);
	}
	new_rest_of_read = ft_substr(rest_of_read, i, ft_strlen(rest_of_read) - i);
	free(rest_of_read);
	return (new_rest_of_read);
}

char	*ft_get_line(char *rest_of_read)
{
	int		i;
	char	*line;

	i = 0;
	if (!rest_of_read)
		return (NULL);
	while (rest_of_read[i] && rest_of_read[i] != '\n')
		i++;
	if (rest_of_read[i] == '\n')
		i++;
	line = ft_substr(rest_of_read, 0, i);
	return (line);
}

char	* ft_read_file(int fd, char *rest_of_read)
{
	char	*buff;
	int		bytes;

	buff = malloc(BUFFER_SIZE + 1);
	if (!buff)
		return (NULL);
	bytes = 1;
	while ((!rest_of_read || !ft_strchr(rest_of_read, '\n')) && bytes > 0)
	{
		bytes = read(fd, buff, BUFFER_SIZE);
		if (bytes < 0)
		{
			free(buff);
			free(rest_of_read);
			return (NULL);
		}
		buff[bytes] = '\0';
		rest_of_read = ft_strjoin(rest_of_read, buff);
	}
	free(buff);
	return (rest_of_read);
}

char	*get_next_line(int fd)
{
	static char	*rest_of_read;
	char		*line;

	if (fd < 0 || BUFFER_SIZE <= 0)
		return (NULL);

	rest_of_read = ft_read_file(fd, rest_of_read);
	if (rest_of_read && *rest_of_read)
	{
		line = ft_get_line(rest_of_read);
		rest_of_read = ft_rest_of_read(rest_of_read);
		return (line);
	}
	free(rest_of_read);
	rest_of_read = NULL;
	return (NULL);
}

