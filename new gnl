#include "get_next_line.h"

char	*ft_strchr(const char *s, int c)
{
	while (*s)
	{
		if (*s == (char)c)
			return ((char *)s);
		s++;
	}
	if ((char)c == '\0')
		return ((char *)s);
	return (NULL);
}

char	*ft_rest_of_read(char *rest_of_read)
{
	int		i;
	char	*new_rest_of_read;

	i = 0;
	if (!rest_of_read)
		return (NULL);
	while (rest_of_read[i] && rest_of_read[i] != '\n')
		i++;
	if (rest_of_read[i] == '\n')
		i++;
	if (!rest_of_read[0])
	{
		free(rest_of_read);
		return (NULL);
	}
	new_rest_of_read = ft_substr(rest_of_read, i, ft_strlen(rest_of_read) - i);
	free(rest_of_read);
	return (new_rest_of_read);
}

char	*ft_get_line(char *rest_of_read)
{
	int		i;
	char	*line;

	i = 0;
	if (!rest_of_read)
		return (NULL);
	while (rest_of_read[i] && rest_of_read[i] != '\n')
		i++;
	if (rest_of_read[i] == '\n')
		i++;
	line = ft_substr(rest_of_read, 0, i);
	return (line);
}

char	* ft_read_file(int fd, char *rest_of_read)
{
	char	*buffer;
	int		bytes_read;

	buffer = malloc(bufferER_SIZE + 1);
	if (!buffer)
		return (NULL);
	bytes_read = 1;
	while ((!rest_of_read || !ft_strchr(rest_of_read, '\n')) && bytes_read > 0)
	{
		bytes_read = read(fd, buffer, bufferER_SIZE);
		if (bytes_read < 0)
		{
			free(buffer);
			free(rest_of_read);
			return (NULL);
		}
		buffer[bytes_read] = '\0';
		rest_of_read = ft_strjoin(rest_of_read, buffer);
	}
	free(buffer);
	return (rest_of_read);
}

char    *get_next_line(int fd)
{
    static char *rest_of_read[MAX_FDS];
    char        *line;

    if (fd < 0 || bufferER_SIZE <= 0 || fd >= MAX_FDS)
        return (NULL);
    rest_of_read[fd] = ft_read_file(fd, rest_of_read[fd]);
    if (rest_of_read[fd] && *rest_of_read[fd])
    {
        line = ft_get_line(rest_of_read[fd]);
        rest_of_read[fd] = ft_rest_of_read(rest_of_read[fd]);
        return (line);
    }
    free(rest_of_read[fd]);
    rest_of_read[fd] = NULL;
    return (NULL);
}


